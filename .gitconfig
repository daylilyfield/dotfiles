[user]
    name = daylilyfield
    email = devlilyfield@gmail.com

[url "https://"]
    insteadof = git://

[core]
    autocrlf = input
    editor = /Applications/MacVim.app/Contents/MacOS/mvim -f

[diff]
    tool = vim-diff

[difftool]
    prompt = false

[difftool "vim-diff"]
    cmd = /Applications/MacVim.app/Contents/MacOS/mvim -f '+next' '+execute \"DirDiff\" argv(0) argv(1)' $LOCAL $REMOTE

[alias]
    co = checkout
    br = branch
    st = status
    cm = commit
    gr = log --graph --date=short --all --format=\"%C(yellow)%h%C(reset) %C(magenta)[%ad]%C(reset)%C(auto)%d%C(reset) %s %C(cyan)@%an%C(reset)\"
    ad = add
    dt = difftool
    df = diff
